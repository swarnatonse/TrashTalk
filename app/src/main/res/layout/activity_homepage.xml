<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swarn.trashtalk.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I took out the trash today!"
        android:id="@+id/trash_button"
        android:onClick="updateScores"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/trash_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Score Board"
            android:id="@+id/textView" />
        <TextView
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView1" />
        <TextView
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView2" />
        <TextView
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView3" />
        <TextView
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView4" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last time trash was taken out:"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Insert Date Here"
        android:id="@+id/dateText"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:id="@+id/signOut"
        android:onClick="signOut"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/dateText" />


</RelativeLayout>
